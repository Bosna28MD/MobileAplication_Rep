<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"

    >


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/parent">

            <TextView
                android:id="@+id/id_userRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/name_userRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name User..."
                android:layout_toRightOf="@+id/id_userRV"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/email_userRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email User..."
                android:layout_toRightOf="@+id/name_userRV"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/pwd_userRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/email_userRV"
                android:text="Password User..."
                android:layout_margin="5dp"

                />







            <ImageButton
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_edit_24"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                />

            <ImageButton
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_delete_forever_24"
                android:layout_toRightOf="@+id/pwd_userRV"
                android:layout_marginRight="10dp"/>

            <!--<ImageView
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/pwd_userRV"
                android:background="@drawable/baseline_edit_24"
                android:layout_marginRight="7dp"/>


            <ImageView
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/edit_btn"
                android:background="@drawable/baseline_delete_forever_24"
                android:layout_marginRight="7dp"/>
            -->

        </LinearLayout>


    </HorizontalScrollView>










</RelativeLayout>